<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TagFind.Pages.DBViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TagFind.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <NavigationView x:Name="NavigationView"
                        IsBackEnabled="True"
                        BackRequested="NavigationView_BackRequested"
                        SelectionChanged="NavigationView_SelectionChanged"
                        IsPaneOpen="False">
            <NavigationView.MenuItems>
                <NavigationViewItem x:Uid="DBContentExplorerPageNavigationViewItem" Icon="ShowResults" Tag="DBContentExplorerPage" IsSelected="True"/>
                <NavigationViewItem x:Uid="DBTagPoolPageNavigationViewItem" Icon="Tag" Tag="DBTagPoolPage"/>
                <NavigationViewItem x:Uid="DBWildItemsManagePageNavigationViewItem" Icon="Preview" Tag="DBWildItemsManagePage"/>
                <!--<NavigationViewItem x:Uid="DBContentEditPageNavigationViewItem" Icon="Edit" Tag="DBContentEditPage"/>-->
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem x:Uid="ExitNavigationViewItem" Tag="Exit">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xF3B1;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>
            <Frame x:Name="ContentFrame" IsTabStop="True"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.Below="TitleBarGrid"
                       RelativePanel.AlignRightWithPanel="True"
                       RelativePanel.AlignBottomWithPanel="True"/>
            <!--<RelativePanel>
                <Grid x:Name="TitleBarGrid" Height="48">
                    <Grid x:Name="TitleBarTitleTextBlock"/>
                </Grid>

            </RelativePanel>-->
        </NavigationView>
    </Grid>
</Page>
