        <StackPanel>
            <TextBlock x:Uid="TutorialTagLogicChainsTitleTextBlock" Style="{StaticResource TitleTextBlockStyle}" Margin="0 0 0 16" TextWrapping="WrapWholeWords"/>
            <Image Source="/Assets/Tutorial/TutorialLogicChains_ver1.0.37.png"/>
            <TextBlock x:Uid="TutorialTagLogicChainsTextBlock" TextWrapping="WrapWholeWords"/>
        </StackPanel>
        <StackPanel>
            <TextBlock x:Uid="TutorialEditDataItemTagsTitleTextBlock" Style="{StaticResource TitleTextBlockStyle}" Margin="0 0 0 16" TextWrapping="WrapWholeWords"/>
