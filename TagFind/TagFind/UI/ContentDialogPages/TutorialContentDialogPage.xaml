            <Image Source="/Assets/Tutorial/TutorialOpenDatabase_ver1.0.12.png"/>
            <TextBlock x:Uid="TutorialDatabaseClickToOpenTextBlock" TextWrapping="WrapWholeWords"/>
        </StackPanel>
        <StackPanel>
            <TextBlock x:Uid="TutorialDataItemExplorerOptionsTitleTextBlock" Style="{StaticResource TitleTextBlockStyle}" Margin="0 0 0 16" TextWrapping="WrapWholeWords"/>
