        </StackPanel>
        <StackPanel>
            <TextBlock x:Uid="TutorialSearchConditionsTitleTextBlock" Style="{StaticResource TitleTextBlockStyle}" Margin="0 0 0 16" TextWrapping="WrapWholeWords"/>
