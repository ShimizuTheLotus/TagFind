<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TagFind.UI.ContentDialogPages.ConfirmDeleteDataItemContentDialogPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TagFind.UI.ContentDialogPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <StackPanel>
                <TextBlock x:Uid="ConfirmDeleteDataItemWarnNoRecycleBinTextBlock"
                           TextWrapping="WrapWholeWords"/>
                <TextBlock x:Uid="ConfirmDeleteDataItemWarnWildSubitemsTextBlock"
                           TextWrapping="WrapWholeWords"/>
                <CheckBox x:Name="ConfirmDeleteDataItemRemoveChildItemsCheckBox"
                          x:Uid="ConfirmDeleteDataItemRemoveChildItemsCheckBox"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
